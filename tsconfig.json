{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
    "skipLibCheck": true,
		"types": ["vinxi/types/client", "unplugin-icons/types/solid"],
		"isolatedModules": true,
    "lib": ["DOM", "ESNext"],
		"paths": {
			"~/*": ["./src/*"]
		}
	},
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules/",
    ".output"
  ]
}
